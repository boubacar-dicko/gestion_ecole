{% extends 'base.html.twig' %}

{% block title %}Page d'Edition des Ecoles{% endblock %}

{% block body %}

    <div class="container mt-8 col-md-10" >
        {{ form_start(form) }}
        <div class="row">

            <div class="col-md-4">{{ form_row(form.nom) }}</div>
            <div class="col-md-4">{{ form_row(form.adresse) }}</div>
        </div>
        <div class="row">
            <div class="col-md-8 text-center">{{ form_row(form.submit, {'label':'Editer'}) }}</div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}